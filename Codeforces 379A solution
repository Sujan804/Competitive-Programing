#include<bits/stdc++.h>
#define kaj_ses return 0;
using namespace std;
int main()
{
    std::ios::sync_with_stdio(false);
    std::cin.tie(0);
    std::cout.tie(0);
    int a,b,result,c;
    cin>>a>>b;
    result = a;
    while(a>=b)
    {
        result += a/b;
        c = a%b;
        a = a/b + c;

    }
    cout<<result<<endl;
    kaj_ses;
}
