#include<bits/stdc++.h>
using namespace std;
#define kaj_ses return 0;
typedef long long ll;
int main()
{
    std::ios_base::sync_with_stdio(false);
    std::cin.tie(0);
    std::cout.tie(0);

    int t;
    cin>>t;
    while(t--)
    {
        int n,m;
        cin>>n>>m;
        if(n==1)
        {
            cout<<0<<endl;
        }
        else  if(n==2)
        {
            cout<<m<<endl;
        }
        else
        {
            cout<<m*2<<endl;
        }

    }
    kaj_ses;
}
