#include<bits/stdc++.h>
using namespace std;
#define kaj_ses return 0;
int main()
{
    std::ios::sync_with_stdio(false);
    std::cin.tie(0);
    std::cin.tie(0);
    int m,n,cnt=0,i;
    cin>>m>>n;

    for(i=1;i<=m;i++)
    {
        cnt++;
        if(i%n==0)
            m++;
    }
    cout<<cnt<<endl;
}
