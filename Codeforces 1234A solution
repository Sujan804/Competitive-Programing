#include<bits/stdc++.h>
#define kaj_ses return 0;
using namespace std;

typedef long long int lli;
int main()
{
    std::ios::sync_with_stdio(false);
    std::cin.tie(NULL);
    std::cin.tie(NULL);
    int p;
    cin>>p;
    while(p--)
    {
        int n;
        lli  sum =0;
        lli  price;

        cin>>n;
        int t =n;
       while(n--)
       {
           cin>>price;
           sum += price;

       }
       if( (sum/t)*t == sum)
       {
           cout<<sum/t<<endl;
       }
       else
       {
           cout<<sum/t+1<<endl;
       }
    }
    kaj_ses;
}
